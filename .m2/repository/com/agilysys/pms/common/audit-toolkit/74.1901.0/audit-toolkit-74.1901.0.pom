<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.agilysys.pms.common</groupId>
    <artifactId>audit-toolkit</artifactId>
    <packaging>jar</packaging>
    <name>Auditing Toolkit</name>
    <description>Facility to track changes made against ordinary repositories</description>
    <parent>
        <artifactId>pms-common-parent</artifactId>
        <groupId>com.agilysys.pms</groupId>
        <version>74.1901.0</version>
    </parent>
    <properties>
        <auditLogger.mutex.timeoutms>300000</auditLogger.mutex.timeoutms>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.agilysys.pms</groupId>
            <artifactId>common-interface</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.agilysys.pms</groupId>
            <artifactId>pms-common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.agilysys.pms</groupId>
            <artifactId>pms-common</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>com/agilysys/pms/common/audit/support/AuditTestHelper.class</include>
                                <include>com/agilysys/pms/common/audit/support/AuditTestHelper$RequestIdHelper.class</include>
                                <include>com/agilysys/pms/common/audit/support/PathBuilder.class</include>
                                <include>com/agilysys/pms/common/audit/support/ValueBuilder.class</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>