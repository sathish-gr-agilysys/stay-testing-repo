<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>persistence-toolkit</artifactId>
    <packaging>jar</packaging>
    <name>Persistence Infrastructure</name>

    <parent>
        <groupId>com.agilysys.platform</groupId>
        <artifactId>platform-libraries</artifactId>
        <version>5.0.88.10</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.agilysys.platform</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.agilysys.platform</groupId>
            <artifactId>monitoring-toolkit</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.agilysys.platform</groupId>
            <artifactId>common</artifactId>
            <scope>test</scope>
            <type>test-jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mongodb</groupId>
            <artifactId>mongo-java-driver</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>ITEST</id>
            <build>
                <testResources>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <filtering>true</filtering>
                        <excludes>
                            <exclude>**/*.jks</exclude>
                            <exclude>**/*.p12</exclude>
                        </excludes>
                    </testResource>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <filtering>false</filtering>
                        <includes>
                            <include>**/*.jks</include>
                            <include>**/*.p12</include>
                        </includes>
                    </testResource>
                </testResources>

                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <forkCount>1</forkCount>
                            <reuseForks>true</reuseForks>
                            <groups>com.agilysys.platform.common.junit.IntegrationTestCategory</groups>
                            <includes>
                                <include>**/*.class</include>
                            </includes>
                            <systemProperties>
                                <!-- if we need ssl for mongo this is required. if we don't need ssl then it shouldn't affect the tests -->
                                <javax.net.ssl.trustStore>${project.build.testOutputDirectory}/mongo_ssl.jks</javax.net.ssl.trustStore>
                                <javax.net.ssl.keyStore>${project.build.testOutputDirectory}/mongo_ssl.p12</javax.net.ssl.keyStore>
                                <javax.net.ssl.keyStoreType>pkcs12</javax.net.ssl.keyStoreType>
                                <javax.net.ssl.keyStorePassword>Agile2o15!</javax.net.ssl.keyStorePassword>
                                <javax.net.ssl.trustStoreType>jks</javax.net.ssl.trustStoreType>
                                <javax.net.ssl.trustStorePassword>Agile2o15!</javax.net.ssl.trustStorePassword>
                            </systemProperties>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>sonar</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>coverage-check</id>
                                <configuration>
                                    <rules>
                                        <rule>
                                            <element>BUNDLE</element>
                                            <limits>
                                                <limit>
                                                    <counter>LINE</counter>
                                                    <value>COVEREDRATIO</value>
                                                    <!-- Increase this as we get better.  When we hit 0.70 remove this entire definition -->
                                                    <minimum>0.68</minimum>
                                                </limit>
                                            </limits>
                                        </rule>
                                    </rules>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
