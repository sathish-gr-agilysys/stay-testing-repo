<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.agilysys</groupId>
  <artifactId>x-ray</artifactId>
  <name>X-Ray</name>
  <version>1.0.1</version>
  <scm>
    <connection>scm:git:ssh://git@stash.agilysys.local:7999/rtools/x-ray.git</connection>
    <developerConnection>scm:git:ssh://git@stash.agilysys.local:7999/rtools/x-ray.git</developerConnection>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <optimize>false</optimize>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.agilysys.xray.XRayApp</mainClass>
                </transformer>
              </transformers>
              <artifactSet />
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>central</id>
      <name>Agilysys Release Repository</name>
      <url>http://artifactory.bellevue.agilysys.com/artifactory/libs-release-local</url>
    </repository>
    <snapshotRepository>
      <id>snapshots</id>
      <name>Agilysys Snapshot Repository</name>
      <url>http://artifactory.bellevue.agilysys.com/artifactory/libs-snapshot-local</url>
    </snapshotRepository>
    <downloadUrl>http://artifactory.bellevue.agilysys.com/artifactory/repo</downloadUrl>
  </distributionManagement>
  <properties>
    <maven.shade.plugin.version>3.0.0</maven.shade.plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

